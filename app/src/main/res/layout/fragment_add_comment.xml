<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_comment.AddCommentFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutComment"
        android:layout_width="369dp"
        android:layout_height="227dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:textColorHint="@color/black_transperent50"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterComment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Введите комментарий"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSaveComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Сохранить комментарий"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutComment" />

</androidx.constraintlayout.widget.ConstraintLayout>