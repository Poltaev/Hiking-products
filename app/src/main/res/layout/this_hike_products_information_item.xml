<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewProducts"
        android:layout_width="68dp"
        android:layout_height="105dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNameProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name products"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNameParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Name Participants"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewWeightOnePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Weight OnePerson"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />

    <TextView
        android:id="@+id/textViewWeightAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="Weight All"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />

    <TextView
        android:id="@+id/textViewWeightPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Weight Package"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />

    <TextView
        android:id="@+id/textViewWeightOneMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Weight remains"
        app:layout_constraintEnd_toStartOf="@+id/buttonCollected"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Нажмите сюда, чтобы оставить комментарий к продукту."

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeightAll" />

    <ImageButton

        android:id="@+id/buttonCollected"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Собрано"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_done_24" />

    <ImageButton
        android:id="@+id/imageButtonHandOver"
        android:layout_width="57dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCollected"
        app:srcCompat="@drawable/baseline_forward_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
