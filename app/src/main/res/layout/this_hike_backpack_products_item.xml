<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewProducts"
        android:layout_width="62dp"
        android:layout_height="95dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNameProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name products"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNameParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:text="Name Participants"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewWeightAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:text="Weight All"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />


    <TextView
        android:id="@+id/textViewWeightPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="Weight Package"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />

    <TextView
        android:id="@+id/textViewWeightRemains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        android:text="Weight remains"
        app:layout_constraintStart_toEndOf="@+id/imageViewProducts"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameProducts" />
</androidx.constraintlayout.widget.ConstraintLayout>
